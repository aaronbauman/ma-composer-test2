{
  "name": "messageagency/ma-composer-test2",
  "description": "Install drops-8 with Composer on Pantheon.",
  "type": "project",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
      "drupal/drupal-extension": "^3.2",
      "behat/mink": "~1.7",
      "behat/mink-goutte-driver": "~1.2",
      "jcalderonzumba/gastonjs": "~1.0.2",
      "drupal/coder": "8.*",
      "mikey179/vfsStream": "~1.2",
      "phpunit/phpunit": "~4.8",
      "symfony/css-selector": "~2.8",
      "behat/behat": "^3.0",
      "se/selenium-server-standalone": "^2.53",
      "composer/composer": "^1.3"
  },
  "require": {
    "composer/installers": "^1.0.20",
    "drupal-composer/drupal-scaffold": "^2.0.1",
    "cweagans/composer-patches": "^1.0",
    "drupal/ma_sprout": "^1.0"
  },
  "repositories": {
    "block_access": {
        "type": "package",
        "package": {
            "name": "drupal/block_access",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "https://github.com/larowlan/block_access",
                "type": "git",
                "reference": "8.x-1.x"
            }
        }
    },
    "ma_sprout": {
        "type": "package",
        "package": {
            "name": "drupal/ma_sprout",
            "type": "drupal-profile",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_sprout.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_blocks": {
        "type": "package",
        "package": {
            "name": "drupal/ma_blocks",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_blocks.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_content": {
        "type": "package",
        "package": {
            "name": "drupal/ma_content",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_content.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_datetime_range_helper": {
        "type": "package",
        "package": {
            "name": "drupal/ma_datetime_range_helper",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_datetime_range_helper.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_gridmenu": {
        "type": "package",
        "package": {
            "name": "drupal/ma_gridmenu",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_gridmenu.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_filters": {
        "type": "package",
        "package": {
            "name": "drupal/ma_filters",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_filters.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_signpost_icons": {
        "type": "package",
        "package": {
            "name": "drupal/ma_signpost_icons",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_signpost_icons.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_twig": {
        "type": "package",
        "package": {
            "name": "drupal/ma_twig",
            "type": "drupal-module",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_twig.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "ma_parent": {
        "type": "package",
        "package": {
            "name": "drupal/ma_parent",
            "type": "drupal-theme",
            "version": "1.0",
            "source": {
                "url": "git@bitbucket.org:messageagency/ma_parent.git",
                "type": "git",
                "reference": "master"
            }
        }
    },
    "chosen": {
        "type": "package",
        "package": {
            "name": "library/chosen",
            "version": "1.0",
            "type": "drupal-library",
            "dist": {
                "url": "https://github.com/harvesthq/chosen/releases/download/v1.6.1/chosen_v1.6.1.zip",
                "type": "zip"
            }
        }
    },
    "drupal": {
        "type": "composer",
        "url": "https://packages.drupal.org/8"
    }
  },
  "conflict": {
      "drupal/drupal": "*"
  },
  "extra": {
    "installer-paths": {
      "web/profiles/ma_sprout/modules/sprout/{$name}": [
        "drupal/ma_blocks",
        "drupal/ma_content",
        "drupal/ma_datetime_range_helper",
        "drupal/ma_gridmenu",
        "drupal/ma_filters",
        "drupal/ma_signpost_icons",
        "drupal/ma_twig",
        "drupal/ma_parent"
      ],
      "web/core": ["type:drupal-core"],
      "web/profiles/ma_sprout/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/{$name}": ["type:drupal-profile"],
      "web/profiles/ma_sprout/themes/{$name}": ["type:drupal-theme"],
      "drush/contrib/{$name}": ["type:drupal-drush"]
    },
    "drupal-scaffold": {
      "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8/{version}/{path}",
      "includes": [
        "sites/default/default.services.pantheon.preproduction.yml",
        "sites/default/settings.pantheon.php"
      ],
      "excludes": [
        ".csslintrc",
        ".editorconfig",
        ".eslintignore",
        ".eslintrc.json",
        ".htaccess",
        "web.config"
      ]
    },
    "enable-patching": true
  }
}
